<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        /* Estilos personalizados para el navbar */
        .navbar-custom {
            background-color: #f2f2f2;
            border-bottom: 1px solid #ddd;
            padding: 0;
            flex-direction: column;
        }
        .navbar-logo {
            width: 100%;
            text-align: center;
            padding: 1.5rem 0; /* Aumentado el padding para dar más espacio */
        }
        .navbar-logo img {
            max-height: 150px; /* Aumentado de 100px a 150px */
            width: auto;
            max-width: 80%; /* Asegura que el logo no sea demasiado ancho en pantallas pequeñas */
            height: auto; /* Mantiene la proporción del aspecto */
            object-fit: contain; /* Asegura que la imagen se ajuste sin distorsionarse */
        }
        .nav-container {
            width: 100%;
            background-color: #f2f2f2;
            padding: 0.5rem 0;
        }
        .navbar-nav {
            margin: 0 auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .navbar-nav .nav-link {
            color: #555 !important;
            font-weight: 500;
            margin: 0 15px;
        }
        .navbar-toggler {
            border: none;
            color: #555;
            margin: 0.5rem auto;
        }
        .navbar-dark .navbar-toggler-icon {
            background-color: #555;
        }
        
        /* Estilo para el contenedor de login */
        .login-container {
            display: flex;
            justify-content: center;
            margin-top: 0.5rem;
        }

        /* Media queries para responsividad */
        @@media (max-width: 576px) {
            .navbar-logo img {
                max-height: 120px; /* Tamaño más pequeño para móviles */
                max-width: 90%;
            }
            .navbar-nav {
                text-align: center;
            }
            .navbar-nav .nav-link {
                margin: 0.5rem 0;
            }
            .login-container {
                margin-top: 1rem;
            }
        }

        /* Para pantallas más grandes */
        @@media (min-width: 992px) {
            .navbar-logo img {
                max-height: 200px; /* Tamaño más grande para pantallas desktop */
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
        <div class="navbar-logo">
            <img src="~/Scripts/IMG/Logo-prueba2.0.jpg" alt="Logo" style="border-radius: 25px; " />
        </div>
        <div class="nav-container">
            <div class="container">
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        title="Alternar navegación" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>
                            <div class="login-container">
                                @Html.Partial("_LoginPartial")
                            </div>
                        </li>
                    </ul>

                </div>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            <!-- Footer -->
            <center>
                <footer>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <p>&copy; 2024 - Todos los derechos reservados ©</p>
                            </div>
                        </div>

                        <!-- Nueva estructura circular de botones sociales -->
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <div class="social-button">
                                    <div class="facebook">
                                        <a href="https://www.facebook.com/gabrieladuran" target="_blank">
                                            <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg" alt="Facebook">
                                        </a>
                                    </div>
                                    <div class="ubicacion">
                                        <a href="https://www.bing.com/maps?osid=ad899003-b955-482c-aa45-2541d786e9ad&cp=9.930998~-84.059358&lvl=17&pi=0&v=2&sV=2&form=S00027" target="_blank">
                                            <svg class="location-icon" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                                <circle cx="12" cy="10" r="3"></circle>
                                            </svg>
                                        </a>
                                    </div>
                                    <div class="email">
                                        <a href="mailto:gyrventas@ice.co.cr" target="_blank">
                                            <img src="https://upload.wikimedia.org/wikipedia/commons/4/4e/Gmail_Icon.png" alt="Correo">
                                        </a>
                                    </div>
                                    <div class="whatsapp">
                                        <a href="https://wa.me/50689966880" target="_blank">
                                            <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp">
                                        </a>
                                    </div>
                                </div>
                                <!-- Texto adicional para los botones -->
                                <span class="text-facebook">Nuestro Facebook</span>
                                <span class="text-ubicacion">Nuestra ubicación</span>
                                <span class="text-email">Enviar Correo</span>
                            </div>
                        </div>
                    </div>
                </footer>

            <!-- Estilos del botón circular de redes sociales -->
            <style>
                footer {
                    background-color: #f8f8f8; /* Color de fondo claro */
                    color: #333; /* Color de texto más oscuro */
                }

                .social-button {
                    display: grid;
                    grid-template-columns: 1fr 1fr;
                    grid-template-rows: 1fr 1fr;
                    border-radius: 50%;
                    width: 200px;
                    height: 200px;
                    margin: 20px auto;
                    overflow: hidden;
                    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                }

                    .social-button div {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        background-color: #6c757d; /* Color gris más oscuro */
                        transition: background-color 0.3s ease;
                    }

                        .social-button div:hover {
                            background-color: #495057; /* Color gris más oscuro al hacer hover */
                        }

                    .social-button img {
                        width: 40px;
                        height: 40px;
                    }

                .facebook {
                    background-color: #3B5998;
                }

                .whatsapp {
                    background-color: #25D366;
                }

                .email {
                    background-color: #D14836;
                }

                .ubicacion {
                    background-color: #4285F4;
                }

                .text-facebook, .text-ubicacion, .text-email {
                    display: inline-block;
                    margin-top: 10px;
                    font-size: 14px;
                    color: #333; /* Color de texto más oscuro */
                }

                .location-icon {
                    width: 24px;
                    height: 24px;
                    fill: none;
                    stroke: #fff; /* Color de icono blanco */
                    stroke-width: 2;
                    transition: stroke 0.3s ease;
                }

                .ubicacion a:hover .location-icon {
                    stroke: #eee; /* Color de icono más claro al hacer hover */
                }
            </style>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>