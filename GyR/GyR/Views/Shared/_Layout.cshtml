        <!-- Estilos del botón circular de redes sociales -->
        <style>
            footer {
                background-color: #333333; /* Color de fondo claro */
                color: white; /* Color de texto más oscuro */
            }

            .social-button {
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-template-rows: 1fr 1fr;
                border-radius: 50%;
                width: 200px;
                height: 200px;
                margin: 20px auto;
                overflow: hidden;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            }

                .social-button div {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #6c757d; /* Color gris más oscuro */
                    transition: background-color 0.3s ease;
                }

                    .social-button div:hover {
                        background-color: #495057; /* Color gris más oscuro al hacer hover */
                    }

                .social-button img {
                    width: 40px;
                    height: 40px;
                }

            .facebook {
                background-color: #3B5998;
            }

            .whatsapp {
                background-color: #25D366;
            }

            .email {
                background-color: #D14836;
            }

            .ubicacion {
                background-color: #4285F4;
            }

            .text-facebook, .text-ubicacion, .text-email {
                display: inline-block;
                margin-top: 10px;
                font-size: 14px;
                color: white; /* Color de texto más oscuro */
            }

            .location-icon {
                width: 24px;
                height: 24px;
                fill: none;
                stroke: #fff; /* Color de icono blanco */
                stroke-width: 2;
                transition: stroke 0.3s ease;
            }

            .ubicacion a:hover .location-icon {
                stroke: #eee; /* Color de icono más claro al hacer hover */
            }
        </style>
</footer>
</html>