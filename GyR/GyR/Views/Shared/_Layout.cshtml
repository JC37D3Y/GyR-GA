<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        /* Estilos personalizados para el navbar */
        .navbar-custom {
            background-color: #B1B1B1;
            border-bottom: 1px solid #ddd;
            padding: 20px;
            flex-direction: column;
            border-radius: 25px;
        }

        .navbar-logo {
            width: 100%;
            text-align: center;
            padding: 1.5rem 0;
        }

            .navbar-logo img {
                max-height: 150px;
                width: auto;
                max-width: 80%;
                height: auto;
                object-fit: contain;
            }

        .nav-container {
            width: 100%;
            background-color: #f2f2f2;
            padding: 0.5rem 0;
            border-radius: 30px;
        }

        .navbar-nav {
            margin: 0 auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .navbar-nav .nav-link {
                color: #555 !important;
                font-weight: 500;
                margin: 0 15px;
            }

        /* Estilos del dropdown */
        .dropdown-menu {
            display: none; /* Oculta el menú por defecto */
            position: absolute;
            background-color: #f8f9fa;
            border-radius: 0.25rem;
            padding: 0.5rem 0;
            border: 1px solid #ddd;
            min-width: 150px;
            top: 100%;
            left: 0;
        }

        .dropdown-item {
            color: #555 !important;
            padding: 10px 20px;
            transition: background-color 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: #e2e6ea;
            }

        /* Media queries para responsividad */

        .navbar-nav {
            text-align: center;
        }

            .navbar-nav .nav-link {
                margin: 0.5rem 0;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
        <div class="navbar-logo">
            <img src="~/Scripts/IMG/Logo-prueba2.0.jpg" alt="Logo" style="border-radius: 25px;" />
        </div>
        <div class="nav-container">
            <div class="container">
                <ul class="navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#" onclick="toggleDropdown()">Productos</a>
                        <ul class="dropdown-menu" id="dropdownMenu">
                            <li><a class="dropdown-item" href="#">Muebles</a></li>
                            <li><a class="dropdown-item" href="#">Celulares</a></li>
                            <li><a class="dropdown-item" href="#">Electrodomésticos</a></li>
                            <li><a class="dropdown-item" href="#">Oficina</a></li>
                            <li><a class="dropdown-item" href="#">Ferretería</a></li>
                            <li><a class="dropdown-item" href="#">Más productos</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>
                        <div class="login-container">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* Script para alternar el menú dropdown *@
    <script>
        function toggleDropdown() {
            var dropdownMenu = document.getElementById("dropdownMenu");
            dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
        }

        // Ocultar el menú cuando se hace clic fuera de él
        window.addEventListener("click", function (event) {
            var dropdownMenu = document.getElementById("dropdownMenu");
            if (!event.target.matches('.nav-link')) {
                dropdownMenu.style.display = "none";
            }
        });
    </script>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
<br>
<br>
